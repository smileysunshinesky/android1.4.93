<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorTextBlue">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/baseline_keyboard_backspace_white_24" />


        <cheap.thrills.fonts.TextViewGotham
            android:id="@+id/tvToolBarTittle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:text="@string/walletdetails"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorWhite"
        android:orientation="vertical">

        <cheap.thrills.fonts.TextViewArialDoubleBold

            android:id="@+id/tvTicketOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_16sdp"
            android:text="@string/_2018_3_park_explorer_adult_sc_y"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@color/colorGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp">

            <cheap.thrills.fonts.TextViewArialBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forText"
                android:textColor="@color/colorWalletHeading"
                android:textSize="@dimen/_15sdp" />

            <cheap.thrills.fonts.TextViewArialRegular
                android:id="@+id/tvCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@color/colorVVVGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp">

            <cheap.thrills.fonts.TextViewArialBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetailsNumb"
                android:textColor="@color/colorWalletHeading"
                android:textSize="@dimen/_15sdp" />

            <cheap.thrills.fonts.TextViewArialRegular
                android:id="@+id/tvTicketNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@color/colorVVVGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp">

            <cheap.thrills.fonts.TextViewArialBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/issued"
                android:textColor="@color/colorWalletHeading"
                android:textSize="@dimen/_15sdp" />

            <cheap.thrills.fonts.TextViewArialRegular
                android:id="@+id/tvIssuedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@color/colorVVVGrey" />

        <RelativeLayout
            android:id="@+id/rlViewDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp">

            <cheap.thrills.fonts.TextViewArialBold
                android:id="@+id/tvViewusedTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/ViewDetails"
                android:textAllCaps="true"
                android:textColor="@color/colorTextBlue"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@id/tvViewusedTicket"
                android:src="@drawable/icon_rightarrow" />
        </RelativeLayout>

        <cheap.thrills.fonts.TextViewArialRegular
            android:id="@+id/tvProductDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_margin="@dimen/_16sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <cheap.thrills.fonts.TextViewGotham
            android:id="@+id/tvTicketOrderDetailsScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_24sdp"
            android:text="@string/_2018_3_park_explorer_adult_sc_y"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />

        <cheap.thrills.fonts.TextViewArialRegular
            android:id="@+id/tvProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:text="@string/tokendetails"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>


</LinearLayout>