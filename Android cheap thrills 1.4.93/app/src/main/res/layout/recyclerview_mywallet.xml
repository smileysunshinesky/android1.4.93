<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:dividerHeight="0.0px"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:id="@+id/llItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_ticketType_logo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_ticket" />
                    <cheap.thrills.fonts.TextViewArialBold
                        android:id="@+id/ticketType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:drawablePadding="@dimen/_8sdp"
                        android:text="@string/parkTicket"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <cheap.thrills.fonts.TextViewArialBold
                    android:id="@+id/tvTicketSizes"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/bluecircle"
                    android:gravity="center"
                    android:text="x"
                    android:textColor="@color/colorWhite"
                    />


            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@color/colorVVVGrey" />

            <ImageView
                android:id="@+id/img_horrornights"
                android:layout_width="wrap_content"
                android:layout_height = "@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:src="@drawable/horrornights"
                android:adjustViewBounds="true"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/img_ticketType"
                android:layout_width="@dimen/_180sdp"
                android:layout_height = "@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/three_park_logo"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/icon_rightarrow" />

            <cheap.thrills.fonts.TextViewArialRegular
                android:id="@+id/tvTicketId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingStart="@dimen/_13sdp"
                android:paddingTop="@dimen/_2sdp"
                android:textAllCaps="true"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
